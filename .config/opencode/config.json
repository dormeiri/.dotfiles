{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "openai/gpt-4.1-mini",
  "autoshare": false,
  "autoupdate": true,
  "disabled_providers": [
    "amazon-bedrock"
  ],
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "enabled": true,
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    }
  }
}
